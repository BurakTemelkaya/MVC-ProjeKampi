@model EntityLayer.Concrete.Writer
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>MVC PROJE KAMPI</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-20/css/style.css">

    <script src='https://www.google.com/recaptcha/api.js'></script>

</head>
<body class="img js-fullheight" style="background-image: url(/AdminLTE-3.0.4/login-form-20/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">MVC PROJE KAMPI YAZAR GİRİŞİ</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Bir Hesabın Var Mı ?</h3>
                        @using (Html.BeginForm("WriterLogin", "Login", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { @class = "signin-form" }))
                        {
                            <div class="form-group">
                                <input type="text" class="form-control" name="WriterMail" placeholder="Mail Adresi" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" type="password" class="form-control" name="WriterPassword" placeholder="*****" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Giriş Yap</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Beni Hatırla
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#" style="color: #fff">Şifremi Unuttum</a>
                                </div>
                            </div>
                            <div class="g-recaptcha offset-md-1" data-sitekey="6LeuxTscAAAAAHDUTM2qQl8-0E6l9pm1ZfzBUg6Y"></div>
                            <br />
                                <p class="text-center text-danger bg-dark">@TempData["Message"]</p>
                        }
                        <p class="w-100 text-center">&mdash; Bir Hesabın Yok Mu ? &mdash;</p>
                        <div class="social d-flex text-center">
                            <a href="/Authorization/WriterRegister" class="px-5 py-2 mr-md-2 rounded"><span class="ion-logo-facebook mr-4"></span> Hemen Kayıt Ol</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/AdminLTE-3.0.4/login-form-20/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/main.js"></script>

</body>
</html>

