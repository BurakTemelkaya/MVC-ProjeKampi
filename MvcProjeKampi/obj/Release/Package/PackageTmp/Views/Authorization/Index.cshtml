@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ 
    string statu="";
    string statuColor = "";
}

<table class="table table-bordered text-center">
    <tr>
        <th>#</th>
        <th>Kullanıcı Adı</th>
        <th>Yetki</th>
        <th>Status</th>
        <th>Pasif Yap</th>
        <th>Yetkisini Değiştir</th>
    </tr>
    <!--Razor Syntax -->
    @foreach (var item in Model)
    {
        if (item.AdminStatus)
        {
            statu = "Pasif Yap";
            statuColor = "bg-danger";
        }
        else
        {
            statu = "Aktif Yap";
            statuColor = "bg-primary";
        }
        <tr>
            <th scope="row">@item.AdminID</th>
            <td>@item.AdminUserName</td>
            <td>@item.AdminRole</td>
            <td>Aktif</td>
            <td><a href="/Authorization/StatusChangedAdmin/@item.AdminID" class="@statuColor">@statu</a></td>
            <td><a href="/Authorization/EditAdmin/@item.AdminID" class="btn btn-warning">Yetkisini Değiştir</a></td>
        </tr>
    }
</table>
<a href="/Authorization/AddAdmin" class="btn btn-info col-md-6 offset-md-3">Yeni Admin Ekle</a>

